<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ACS!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css?v2') }}">
        {% endblock %}

        {% block javascripts %}
                    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
       <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>   
            
        {% endblock %}
    </head>
    <body>
    {% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{path('index')}}">ACS</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{path('index')}}">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{path('booking_add')}}">Book Flight</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About Us</a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link" href="#"  role="button">
            Contact Us
          </a>
          </li>
      </ul>
      <div class="d-flex">
      {% if app.user %}


      {% set roles = app.user.roles %}
      {% if 'ROLE_ADMIN' in roles %}
        {% set route = "admin_dashboard" %}
        {% else %}
        {% set route = "visitor_dashboard" %}

      {% endif %} 

        <h5>Welcome, <a href="{{path(route)}}">{{app.user.firstName}}</a></h5>
        &nbsp;&nbsp;&nbsp;
        <a href="{{path('app_logout')}}" class="btn btn-secondary" >Logout </a>
  
    {% else %}
    <a href="{{path('app_login')}}" class="btn btn-primary" >Login</a>
     &nbsp;&nbsp;&nbsp;
        <a href="{{path('register')}}" class="btn btn-secondary" >Register</a>
    {% endif %}
       
      </div>
    </div>
  </div>
</nav>
    {% endblock %}
    {% block body %}
    {% endblock %}
    {% block footer %}
    <div class="footer mt-auto" style="position: fixed; bottom: 0; width: 100%; z-index: 100">
      <span><a href="{{path('index')}}">ACS</span>
      <span>About Us</span>
      <span>Contact Us</span>

    </div>
    {% endblock %}

 
         </body>
</html>
